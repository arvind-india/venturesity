<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.io.startuplabs.khata_seller.MyDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagedetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />
    <Button
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="Review Us"
        android:id="@+id/playstore"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#ffff"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imagedetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_width="120dp"
        android:id="@+id/nametext"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/phonetext"
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/phonetext"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nametext"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:textStyle="bold"

        android:layout_width="120dp"
        android:id="@+id/mycodetext"
        android:layout_height="wrap_content"
        android:text="Refer Code"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phonetext"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/mycode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_alignBaseline="@+id/mycodetext"
        android:layout_alignBottom="@+id/mycodetext"
        android:layout_alignStart="@+id/phone"
        android:layout_marginStart="50dp" />

    <TextView
        android:textStyle="bold"

        android:layout_width="120dp"
        android:id="@+id/mypoints"
        android:layout_height="wrap_content"
        android:text="Refer Points"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/mycodetext"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/myrefer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_alignBaseline="@+id/mypoints"
        android:layout_alignBottom="@+id/mypoints"
        android:layout_alignStart="@+id/mycode"
        android:layout_marginStart="18dp" />

    <TextView
        android:textStyle="bold"

        android:layout_width="120dp"
        android:id="@+id/phonetext"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/nametext"
        android:layout_alignParentStart="true" />
</RelativeLayout>
